jQuery ->
  if $('.pagination').length
    $(window).scroll ->
      url = $('.pagination .next_page').attr('href')
      if url and $(window).scrollTop() > $(document).height() - $(window).height() - 50
        $('.pagination').html('<img src="<%= asset_path 'loading.gif' %>" alt="loading">')
        $.getScript(url)
    $(window).scroll()
