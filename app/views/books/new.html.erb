<div class="row collapse" id="new-gif-page">
  <div class="large-4 medium-4 small-12 columns text-center">
    <%= link_to gif_maker_pictures_path do %>
      <span>
        <i class="fi-camera"></i>
        <p>
          Create a gif from two or more pictures
        </p>
      </span>
    <% end %>
  </div>
  <div class="large-4 medium-4 small-12 columns text-center">
    <%= link_to gif_maker_video_path do %>
      <span>
        <i class="fi-video"></i>
        <p>
          Create a gif from a video
        </p>
      </span>
    <% end %>
  </div>
  <div class="large-4 medium-4 small-12 columns text-center">
    <%= link_to gif_upload_path do %>
      <span>
        <i class="fi-page"></i>
        <p>
          Just upload a GIF
        </p>
      </span>
    <% end %>
  </div>
</div>