<div class="row collapse" id="gif-maker-video-container">
  <h3 class="text-center">Upload a video to convert it into a GIF</h3>

  <input type="file" id="upload-video-file-input" class="custom-file-input">

  <div id="create-button-container" class="custom-form text-center">
    <a class="button" id="create-gif-button">Create my gif</a>
  </div>

  <div class="row gif-maker-bordered-container" id="save-gif-form">
    <div class="large-6 medium-6 small-12 columns">

      <div id="created-gif-container" class="text-center">
      </div>

    </div>
    <div class="large-6 medium-6 small-12 columns">

      <div class="custom-form text-center">
        <h4>Your GIF is ready. Save it here!</h4>
        <form>
          <input type="text" id="gif-title" placeholder="Enter a title for your gif">
          <select id="gif-category">
            <option value="0">Select a category</option>
            <%= categories.each do |category| %>
              <option value="<%= category.id %>">
                <%= category.name %>
              </option>
            <% end %>
          </select>
          <input type="submit" id="save-gif-button" value="Click here to save the GIF" class="button primary" />
        </form>
      </div>

    </div>
  </div>

  <p class="text-center">Only the first few seconds of the GIF is visible in the video to GIF maker<p>
</div>