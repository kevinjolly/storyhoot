<div class="row">
  <div class="large-4 large-centered columns custom-form">
    <div class="text-center">
      <%= link_to image_tag('logo_storyhoot.png'), root_path %>
    </div>
    <h3 class="text-center">Enter your email</h3>
    <%= form_tag password_resets_path, :method => :post do %>
      <%= text_field_tag :email, nil, placeholder: 'Enter your email' %>
      <div class="text-center">
        <%= submit_tag "Reset my password!", class: 'button tiny' %>
      </div>
    <% end %>
    <p class="text-center">
      <%= link_to 'No problem. I remember it!', login_path %>
    </p>
  </div>
</div>
